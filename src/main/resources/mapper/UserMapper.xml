<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >
<mapper namespace="com.jtb.shiro.mapper.UserMapper">
    <resultMap type="com.jtb.shiro.model.User" id="userMap">
        <id property="uid" column="uid" />
        <result property="username" column="username" />
        <result property="password" column="password" />
        <collection property="roles" ofType="com.jtb.shiro.model.Role">
            <id property="rid" column="rid" />
            <result property="rname" column="rname" />
            <collection property="permissions" ofType="com.jtb.shiro.model.Permission">
                <id property="pid" column="pid" />
                <result property="pname" column="name" />
                <result property="url" column="url" />
            </collection>
        </collection>
    </resultMap>

    <select id="findByUsername" parameterType="string" resultMap="userMap">
        select u.*, r.*, p.*
        from user u
          inner join user_role u_r
          inner join role r
          inner join permission_role p_r
          inner join permission p
        where u.username = #{username}
    </select>
</mapper>